<body style="border: 50px solid;">
  <section>
    <div class="card-header">
      <span class="texto"
        style="font-size: 2em; color: black; display: block; text-align: center; font-family:Arial, Helvetica, sans-serif;">Nuevo
        Bloque</span>
    </div>
    <div class="container-mt4">
      <img src="/Styles/destino.png" alt="Descripción de la imagen" class="resizable-image"
        style="max-width: 25%; display: block; margin: 0 auto;">
      <div class="card-body">
        <form action="/save" method="POST" id="createForm" style="font-family: inherit;">
          <div class="form-box">
            <div class="form-value" style="margin-top: 20px;">
              <div class="row justify-content-center" style="margin-left: 1px">
                <div class="mb-3" style="margin-left: 20px;">
                  <div class="form-floating mb-1">
                    <input type="text" class="form-control" id="nombre" name="nombre" tabindex="1" style="width: 427px;"
                      required />
                    <label for="floatingInput">Nombre del bloque:</label>
                  </div>
                </div>
                <div class="mb-3" style="margin-left: 20px;">
                  <div class="form-floating mb-1">
                    <input type="text" class="form-control" id="descripcion" name="descripcion" tabindex="1"
                      style="width: 427px;" required />
                    <label for="floatingInput">Descripción:</label>
                  </div>
                </div>
              </div>
              <div class="row justify-content-center" style="margin-left: 1px">
                <div class="mb-3" style="margin-left: 20px;">
                  <div class="form-floating mb-1">
                    <input type="text" class="form-control" id="latitud" name="latitud" tabindex="1"
                      style="width: 427px;" required />
                    <label for="floatingInput">Latitud:</label>
                  </div>
                </div>
                <div class="mb-3" style="margin-left: 20px;">
                  <div class="form-floating mb-1">
                    <input type="text" class="form-control" id="longitud" name="longitud" tabindex="1"
                      style="width: 427px;" required />
                    <label for="floatingInput">Longitud:</label>
                  </div>
                </div>
              </div>
              <div class="row justify-content-center" style="margin-left: 1px">
                <div class="mb-3" style="margin-left: 20px;">
                  <div id="mensaje-exito" style="display: none; width: 427px" class="alert alert-success">
                    Bloque guardado exitosamente.
                  </div>
                </div>
              </div>
              <br>
              <button type="submit" class="btn btn-primary custom-button" tabindex="5"
                style="background-color: #210f7a; color: #fff; margin-left: 100px;">GUARDAR</button>
              <a href="javascript:void(0);" onclick="cerrarModalCreate()" class="btn btn-secondary custom-button"
                style="background-color: rgb(200, 32, 32); color: #fff; margin-left: 50px;">CANCELAR</a>
        </form>
      </div>
    </div>
    </div>
    </div>
  </section>
  <script>
    document.getElementById("createForm").addEventListener("submit", function (event) {
      event.preventDefault();
      const latitud = document.getElementById("latitud").value;
      const longitud = document.getElementById("longitud").value;

      if (!isValidLatitud(latitud) || !isValidLongitud(longitud)) {
        //alert("Latitud o longitud no válida. Por favor, ingrese valores válidos.");
      } else {
        document.getElementById("createForm").submit();
      }
    });

    function isValidLatitud(latitud) {
      return !isNaN(latitud) && parseFloat(latitud) >= -90 && parseFloat(latitud) <= 90;
    }

    function isValidLongitud(longitud) {
      return !isNaN(longitud) && parseFloat(longitud) >= -180 && parseFloat(longitud) <= 180;
    }
  </script>
